    "version": "0.2.0",
    "configurations": [        
        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "Rspec debugger with bundler",
            "request": "launch",
            "useBundler": true,
            "script": "./bin/rspec"
        }
    ]
}
